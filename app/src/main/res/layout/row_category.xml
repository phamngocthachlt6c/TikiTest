<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="0.6dp"
          android:background="@color/row_category_divided_line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

        <com.makeramen.roundedimageview.RoundedImageView
                android:layout_margin="5dp"
                android:id="@+id/imgAvatar"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                android:layout_weight="2.3"
                android:layout_height="wrap_content"
                tools:src="@drawable/loading_picture"
                app:riv_corner_radius="4dp"
                app:riv_border_width="0dp"/>

        <LinearLayout
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/tvTitle"
                    tools:text="Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="15sp"
                    android:textColor="@color/row_category_text_update_at"
                    android:textStyle="bold"
                    android:id="@+id/tvUpdateAt"
                    tools:text="Update at 7/20/2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
                android:layout_width="0dp"
                android:alpha="0.5"
                android:layout_weight="0.7"
                android:src="@drawable/ic_right_direction"
                android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>